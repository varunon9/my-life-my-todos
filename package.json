{
  "name": "my-life-my-todos",
  "version": "1.0.0",
  "description": "A todo (task management) desktop app built using node-webkit (nw.js) and react.js",
  "main": "index.html",
  "scripts": {
    "build": "export NODE_ENV=production && webpack --watch",
    "build-dev": "export NODE_ENV=development && webpack --watch",
    "start": "nw ./"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/varunon9/my-life-my-todos.git"
  },
  "keywords": [
    "node-webkit",
    "nwjs",
    "reactjs",
    "desktop-app",
    "task-manager",
    "todoapp"
  ],
  "author": "Varun Kumar <varunon9@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/varunon9/my-life-my-todos/issues"
  },
  "homepage": "https://github.com/varunon9/my-life-my-todos#readme",
  "window": {
    "toolbar": true,
    "min_width": 500,
    "min_height": 300
  },
  "chromium-args": "--enable-logging=stderr",
  "dependencies": {
    "react": "^16.4.0",
    "react-dom": "^16.4.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-react-html-attrs": "^2.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "webpack": "^4.11.0",
    "webpack-cli": "^3.0.2"
  }
}
